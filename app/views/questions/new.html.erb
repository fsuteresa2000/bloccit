<h1>New Question</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidlines for questions</p>
    <ul>
      <li>Be awesome.</li>
      <li>If you can't be awesome, be clever.</li>
      <li>But preferrably, be both.</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @question do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control", placeholder: "Enter post title" %>
      </div>

      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: "form-control", placeholder: "Enter post body" %>
      </div>
      <div class="form-group">
        <%= f.label "Question is resolved?" %>
        <%= f.check_box :resolved %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
